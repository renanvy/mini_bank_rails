<div class="panel panel-default">
  <div class="panel-heading"><strong>Criar nova conta</strong></div>

  <div class="panel-body">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p><%= f.error_notification %></p>

      <div class="row">
        <div class="col-md-3"> 
          <%= f.input :name %>
        </div>

        <div class="col-md-3">
          <%= f.input :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <%= f.input :password %>
        </div>

        <div class="col-md-3">
          <%= f.input :password_confirmation %>
        </div>
      </div>

      <p><%= f.button :submit, "Cadastrar", class: "btn btn-success" %></p>

    <% end %>
  </div>
</div>